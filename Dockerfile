############################################################
# Dockerfile
############################################################

# Set the base image
FROM arm32v7/alpine:3.11.0

############################################################
# Configuration
############################################################
ENV VERSION "8.3.4"

############################################################
# Installation
############################################################
RUN apk add bash --no-cache && \
    apk add curl --no-cache 
    
RUN npm install -g @angular/cli@${VERSION}

RUN mkdir -p /workdir
VOLUME /workdir
WORKDIR /workdir

############################################################
# Execution
############################################################
ENTRYPOINT ["ng", "--help"]
